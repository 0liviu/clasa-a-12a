#include <bits/stdc++.h>

using namespace std;

void p(int n,int a[51], int &maxx, int &imax, int &sum)
{
    maxx=0;imax=0;sum=0;
    for(int i=1;i<=n;i++)
    {
        if(maxx<a[i])
        {maxx=a[i];
        imax=i;
        }
        sum=sum+a[i];
    }
}
ifstream f("bac.in");
int main()
{
    int n,x[51],i,maxx=0,imax=0,sum=0;
    float ma;
    f>>n;
    for(i=1;i<=n;i++)
        f>>x[i];
    p(n,x,maxx,imax,sum);
    x[imax]=1;
    p(n,x,maxx,imax,sum);
    ma=sum/n;
    cout<<fixed<<setprecision(2)<<ma;
    return 0;
}
